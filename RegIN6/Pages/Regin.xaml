<Page x:Class="RegIN6.Pages.Regin"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:RegIN6.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Regin"
        xmlns:uc="clr-namespace:RegIN6.Elements"
  xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
  TextElement.Foreground="{DynamicResource MaterialDesignBody}"
  TextElement.FontWeight="Regular"
  TextElement.FontSize="13"
  TextOptions.TextFormattingMode="Ideal"
  TextOptions.TextRenderingMode="Auto"
  Background="{DynamicResource MaterialDesignPaper}"
  FontFamily="{DynamicResource MaterialDesignFont}">

    <Grid>
        <materialDesign:Card
          Height="400"
          VerticalAlignment="Center"
          HorizontalAlignment="Center"
          Width="300">
            <Grid>
                <Image
                  x:Name="IUser"
                  HorizontalAlignment="Center"
                  Height="80"
                  Margin="0,63,0,0"
                  VerticalAlignment="Top"
                  Width="64"
                  MouseDown="SelectImage"
                  Source="/Images/user.png">

                </Image>
                <Label
                  x:Name="LNameUser"
                  Margin="10,137,10,0"
                  HorizontalContentAlignment="Center"
                  Content=""
                  VerticalAlignment="Top"/>
                <Label
                  Content="Enter login:"
                  Margin="10,161,10,0"
                  VerticalAlignment="Top"/>
                <TextBox
                  x:Name="TbLogin"
                  Height="23" 
                  Margin="10,185,10,0"
                  TextWrapping="Wrap"
                  Text=""
                  VerticalAlignment="Top"
                  KeyUp="SetLogin"
                  LostFocus="SetLogin"/>
                <Label
                  Content="Enter Name:"
                  Margin="10,213,10,0"
                  VerticalAlignment="Top"/>
                <TextBox
                  x:Name="TbName"
                  Margin="10,237,10,0"
                  VerticalAlignment="Top"
                  Text=""
                  TextWrapping="Wrap"
                  Height="26"
                  PreviewTextInput="SetName"/>
                <Label
                  Content="Enter password"
                  Margin="10,265,0,0"
                  VerticalAlignment="Top"/>
                <PasswordBox
                  x:Name="TbPassword"
                  Margin="10,289,10,0"
                  VerticalAlignment="Top"
                  Height="26"
                  KeyDown="SetPassword"
                  LostFocus="SetPassword"/>
                <Label
                  Content="Confirm the password"
                  Margin="10,320,10,0"
                  VerticalAlignment="Top"
                  Foreground="#FF673AB7"
                  FontSize="10"
                  MouseDown="OpenRegin"
                  HorizontalAlignment="Right"
                  Width="62"/>
                <PasswordBox
                  x:Name="tbConfirmPassword"
                  Margin="10,344,10,0"
                  VerticalAlignment="Top"
                  Height="26"
                  KeyDown="ConfirmPassword"
                  LostFocus="ConfirmPassword"/>
                <Label
                  Content="Back"
                  Margin="10,373,10,0"
                  VerticalAlignment="Top"
                  Foreground="#FF673AB7"
                  FontSize="10"
                  MouseDown="OpenLogin"/>
            </Grid>
        </materialDesign:Card>
    </Grid>
</Page>
