<Page x:Class="RegIN6.Pages.PinPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:RegIN6.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      TextElement.Foreground="{DynamicResource MaterialDesignBody}"
      TextElement.FontWeight="Regular"
      TextElement.FontSize="13"
      Background="{DynamicResource MaterialDesignPaper}"
      FontFamily="{DynamicResource MaterialDesignFont}"
      Title="PIN Code">

    <Grid>
        <materialDesign:Card
            Height="350"
            VerticalAlignment="Center"
            HorizontalAlignment="Center"
            Width="320">
            <Grid>
                <Image
                    x:Name="IUser"
                    HorizontalAlignment="Center"
                    Height="64"
                    Margin="0,40,0,0"
                    VerticalAlignment="Top"
                    Width="73"
                    Source="/Images/pin.png">

                </Image>

                <Label
                    x:Name="LTitle"
                    Content="Введите Пинкод"
                    HorizontalAlignment="Center"
                    Margin="0,130,0,0"
                    VerticalAlignment="Top"
                    FontSize="16"
                    FontWeight="Bold"/>

                <Label
                    Content="Пинкод:"
                    Margin="20,170,20,0"
                    VerticalAlignment="Top"/>

                <PasswordBox
                    x:Name="TbPin"
                    Margin="20,195,20,0"
                    Height="35"
                    VerticalAlignment="Top"
                    FontSize="18"
                    HorizontalContentAlignment="Center"
                    PasswordChar="●"
                    MaxLength="4"
                    PreviewTextInput="TbPin_PreviewTextInput"
                    KeyUp="TbPin_KeyUp"/>

                <Label
                    x:Name="LError"
                    Foreground="Red"
                    Margin="20,235,20,0"
                    VerticalAlignment="Top"
                    Height="25"/>

                <Button
                    Background="Black"
                    x:Name="BtnAction"
                    Content="Продолжить"
                    Width="80"
                    FontSize="8"
                    Height="20"
                    HorizontalAlignment="Left"
                    Margin="220,305,0,0"
                    VerticalAlignment="Top"
                    Click="BtnAction_Click"/>

                <Label
                    Content="Назад"
                    Margin="20,305,254,0"
                    VerticalAlignment="Top"
                    Foreground="Black"
                    FontSize="10"
                    MouseDown="OpenLogin"/>
            </Grid>
        </materialDesign:Card>
    </Grid>
</Page>