<Page x:Class="RegIN6.Pages.Confirmation"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:RegIN6.Pages"
      mc:Ignorable="d" 
        d:DesignHeight="410" d:DesignWidth="710"
   xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
   TextElement.Foreground="{DynamicResource MaterialDesignBody}"
   TextElement.FontWeight="Regular"
   TextElement.FontSize="13"
   TextOptions.TextFormattingMode="Ideal"
   TextOptions.TextRenderingMode="Auto"
   Background="{DynamicResource MaterialDesignPaper}"
   FontFamily="{DynamicResource MaterialDesignFont}"
      Title="Confirmation">

    <Grid>
        <materialDesign:Card
          Height="304"
          VerticalAlignment="Center"
          HorizontalAlignment="Center"
          Width="307">
            <Grid>
                <Image
                  x:Name="IUser"
                  HorizontalAlignment="Center"
                  Height="76"
                  Margin="0,56,0,0"
                  VerticalAlignment="Top"
                  Width="83"
                  Source="/Images/gmail.png">


                </Image>
                <Label
                  Margin="10,137,10,0"
                  HorizontalContentAlignment="Center"
                  Content="A message has been sent to your email."
                  VerticalAlignment="Top"/>
                <Label
                  Content="Enter code:"
                  Margin="10,161,10,0"
                  VerticalAlignment="Top"/>
                <TextBox
                  x:Name="TbCode"
                  Height="23" 
                  Margin="10,185,10,0"
                  TextWrapping="Wrap"
                  Text=""
                  VerticalAlignment="Top"
                  KeyUp="SetCode"/>
                <Label
                  x:Name="LTimer"
                  Content=""
                  Margin="10,213,10,0"
                  VerticalAlignment="Top"
                  FontSize="12"/>
                <Button x:Name="BSendMessage"
                      IsEnabled="False"
                      Width="200px"
                      Height="25px"
                      Content="Send Message"
                      Margin="46, 235, 54, 43.2"
                      Click="SendMail"/>
                <Label
                  Content="Back"
                  Margin="10,273,10,0"
                  VerticalAlignment="Top"
                  Foreground="#FF673AB7"
                  FontSize="10"
                  MouseDown="OpenLogin"/>
            </Grid>
        </materialDesign:Card>
    </Grid>
</Page>
